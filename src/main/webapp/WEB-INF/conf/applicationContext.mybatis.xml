	<bean class="org.mybatis.spring.annotation.MapperScannerPostProcessor">
		<property name="basePackage" value="com.nextmenu" />
	</bean>
	<bean id="userDao" class="com.nextmenu.apps.dao.impl.UserDaoImpl"></bean>
	-->
</beans>